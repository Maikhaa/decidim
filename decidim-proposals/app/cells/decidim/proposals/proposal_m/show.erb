<div class="column">
  <article class="card card--proposal">
    <div class="card__content">
      <div class="card__header">
        <%= link_to resource_path do %>
          <h5 class="card__title">
            <%= title %>
          </h5>
        <% end %>

        <%= cell "decidim/author_box", present(model).author, extra_classes: ["author-data--small"] %>

        <div class="tech-info tech-info--text-left">
          <%= t("decidim.participatory_spaces.proposal.creation_date", date: l(model.created_at, format: :decidim_short)) %>
        </div>
        <%= resource_reference(model, class: "tech-info--text-left") %>
      </div>

      <%= render partial: "decidim/proposals/proposals/proposal_badge.html", locals: { proposal: model } %>

      <p>
        <%= body %>
      </p>

      <%= render partial: "decidim/shared/tags.html", locals: { resource: model, tags_class_extra: "tags--proposal" } %>
    </div>

    <%= cell("decidim/proposals/proposal_m", model).footer %>
  </article>
</div>
