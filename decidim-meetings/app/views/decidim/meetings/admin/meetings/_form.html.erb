<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= title %></h2>
  </div>

  <div class="card-section">
    <div class="row column" >
      <%= form.translated :text_field, :title, autofocus: true %>
    </div>

    <div class="row column" >
      <%= form.translated :editor, :description %>
    </div>

    <div class="row column" >
      <%= form.text_field :address %>
    </div>

    <div class="row column" >
      <%= form.translated :text_area, :location %>
    </div>

    <div class="row column" >
      <%= form.translated :text_area, :location_hints %>
    </div>

    <div class="row" >
      <div class="columns xlarge-6" >
        <%= form.datetime_field :start_time %>
      </div>

      <div class="columns xlarge-6" >
        <%= form.datetime_field :end_time %>
      </div>
    </div>
    <div class="row" >
      <% if current_participatory_space.has_subscopes? %>
        <div class="columns xlarge-6" >
          <%= scopes_picker_field form, :decidim_scope_id %>
        </div>
      <% end %>

      <div class="columns xlarge-6" >
        <%= form.categories_select :decidim_category_id, current_participatory_space.categories, prompt: "", disable_parents: false %>
      </div>
    </div>

    <div class="row column">
      <%= form.select :open_type, @form.meeting_open_types_for_select, { include_blank: t(".select_open_type") }, { multiple: false } %>
    </div>

    <div class="row column" id="open_type_other">
      <%= form.translated :text_field, :open_type_other %>
    </div>

    <div class="row column">
      <%= form.select :public_type, @form.meeting_public_types_for_select, { include_blank: t(".select_public_type") }, { multiple: false } %>
    </div>

    <div class="row column" id="open_type_other">
      <%= form.translated :text_field, :public_type_other %>
    </div>

    <div class="row column">
      <%= form.select :transparent_type, @form.meeting_transparent_types_for_select, { include_blank: t(".select_transparent_type") }, { multiple: false } %>
    </div>

    <div class="row column" id="open_type_other">
      <%= form.translated :text_field, :transparent_type_other %>
    </div>
  </div>
</div>
