<div class="card" id="meetings">
  <div class="card-divider">
    <h2 class="card-title"><%= title %></h2>
  </div>

  <div class="card-section">
    <div class="row column" >
      <%= form.translated :text_field, :title, autofocus: true %>
    </div>

    <div class="row column" >
      <%= form.translated :editor, :description %>
    </div>

    <div class="row column" >
      <%= form.text_field :address %>
    </div>

    <div class="row column" >
      <%= form.translated :text_area, :location %>
    </div>

    <div class="row column" >
      <%= form.translated :text_area, :location_hints %>
    </div>

    <div class="row" >
      <div class="columns xlarge-6" >
        <%= form.datetime_field :start_time %>
      </div>

      <div class="columns xlarge-6" >
        <%= form.datetime_field :end_time %>
      </div>
    </div>

    <div class="row column">
      <% picker_text = form.object.organizer.present? ? "#{form.object.organizer.name} (@#{form.object.organizer.nickname})" : "" %>
      <%= form.text_field :organizer_picker, value: picker_text, class: "user-autocomplete", placeholder: t(".select_organizer"),
                          data: { url: organizers_meeting_url(meeting) } %>
      <%= form.hidden_field :organizer_id %>
    </div>

    <div class="row column">
      <%= form.select :open_type, meeting_open_types_for_select, { include_blank: t(".select_open_type") }, { multiple: false } %>
    </div>

    <div class="row column" id="meeting_open_type_other">
      <%= form.translated :text_field, :open_type_other %>
    </div>

    <div class="row column">
      <%= form.select :public_type, meeting_public_types_for_select, { include_blank: t(".select_public_type") }, { multiple: false } %>
    </div>

    <div class="row column" id="meeting_public_type_other">
      <%= form.translated :text_field, :public_type_other %>
    </div>

    <div class="row column">
      <%= form.select :transparent_type, meeting_transparent_types_for_select, { include_blank: t(".select_transparent_type") }, { multiple: false } %>
    </div>

    <div class="row column" id="meeting_transparent_type_other">
      <%= form.translated :text_field, :transparent_type_other %>
    </div>
  </div>
</div>
<%= javascript_include_tag "decidim/meetings/admin/meetings_form" %>
